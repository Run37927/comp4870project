@page
@{
    ViewData["Title"] = "Pricing";
}
<div class="kinda-pricing-container">
    <div class="kinda-pricing-header">
        <h1 class="kinda-pricing-title">Pricing</h1>
        <p class="kinda-pricing-subtitle">
            Whether you're just trying out our service or need more, we've got you covered.
        </p>
    </div>

    <div class="kinda-pricing-grid">
        <div class="kinda-plan-card">
            <div class="kinda-plan-content">
                <h3 class="kinda-plan-title">Free</h3>
                <p class="kinda-plan-tagline ">For casual chatters.</p>
                <p class="kinda-plan-price ">$0</p>
                <p class="kinda-plan-duration ">per month</p>
            </div>
            <ul class="kinda-plan-features">
                <li class="kinda-feature-item ">
                    <p class="kinda-feature-description">✅ 3 languages supported</p>
                </li>
                <li class="kinda-feature-item ">
                    <p class="kinda-feature-description">✅ Mobile-friendly interface</p>
                </li>
                <li class="kinda-feature-item">
                    <p class="kinda-feature-description">❌ Priority support</p>
                </li>
                <li class="kinda-feature-item">
                    <p class="kinda-feature-description">❌ Higher quality members</p>
                </li>
            </ul>
            <div class="kinda-pro-plan-divider"></div>
            <div class="kinda-plan-action">
                <a href="/upgrade" class="kinda-upgrade-button">Upgrade to Pro</a>
            </div>
        </div>

        <div class="kinda-pro-plan-card">
            <div class="kinda-pro-plan-badge">
                Best Value
            </div>
            <div class="kinda-pro-plan-content">
                <h3 class="kinda-pro-plan-title">Pro</h3>
                <p class="kinda-pro-plan-tagline">For serious polyglots.</p>
                <p class="kinda-pro-plan-price">$999</p>
                <p class="kinda-pro-plan-duration">per month</p>
            </div>
            <ul class="kinda-pro-plan-features">
                <li class="kinda-pro-feature-item">
                    <p class="kinda-pro-feature-description">✅ 5 languages supported</p>
                </li>
                <li class="kinda-feature-item">
                    <p class="kinda-feature-description ">✅ Mobile-friendly interface</p>
                </li>
                <li class="kinda-feature-item ">
                    <p class="kinda-feature-description ">✅ Priority support</p>
                </li>
                <li class="kinda-feature-item">
                    <p class="kinda-feature-description">✅ Higher quality members</p>
                </li>
            </ul>
            <div class="kinda-pro-plan-divider"></div>
            <div class="kinda-pro-plan-action">
                <a href="/upgrade" class="kinda-upgrade-button">Upgrade to Pro</a>
            </div>
        </div>
    </div>
</div>